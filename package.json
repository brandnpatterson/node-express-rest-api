{
  "name": "penpals",
  "private": true,
  "version": "1.0.0",
  "description": "penpals",
  "main": "index.js",
  "author": "Brandon Patterson",
  "scripts": {
    "start": "nodemon index.js --ignore client",
    "start:client": "npm run dev --prefix client",
    "dev": "npm run start & npm run start:client",
    "lint": "eslint . --ignore-path .gitignore",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\"",
    "format": "npm run prettier -- --write",
    "test": "jest",
    "test:client": "npm run test --prefix client",
    "test:all": "npm run test && npm run test:client"
  },
  "dependencies": {
    "express": "^4.17.1",
    "nodemon": "^2.0.2",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.2.3",
    "jest": "^25.2.6",
    "lint-staged": "^10.1.1",
    "npm": "^6.14.4",
    "prettier": "^2.0.2"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup/setupTests.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/test/setup",
      "<rootDir>/client"
    ]
  },
  "lint-staged": {
    "*.+(js)": [
      "eslint"
    ],
    "**/*.+(js)": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:all && lint-staged"
    }
  }
}
