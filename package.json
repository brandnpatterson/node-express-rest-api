{
  "name": "ts-node-react",
  "private": true,
  "version": "1.0.0",
  "description": "ts-node-react",
  "main": "dist/index.js",
  "author": "Brandon Patterson",
  "scripts": {
    "install:client": "npm install --prefix client",
    "build:client": "npm run build --prefix client",
    "client": "npm start --prefix client",
    "build:types": "tsc",
    "build:js": "babel src --out-dir dist --extensions \".ts\" --source-maps inline --ignore test",
    "build": "npm run build:types && npm run build:js",
    "start": "node .",
    "server": "nodemon --exec ts-node src/index.ts",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint . --ext .js,.ts",
    "lint:all": "eslint . && npm run lint --prefix client",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\"",
    "format": "npm run prettier -- --write",
    "test": "jest",
    "test:all": "concurrently \"npm run test\" \"npm run test --prefix client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run install:client && concurrently \"npm run build:client\" \"npm run build:types && npm run build:js\""
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mysql2": "^2.1.0",
    "pug": "^2.0.4",
    "sequelize": "^5.21.6",
    "sequelize-cli": "^5.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/express": "^4.17.4",
    "@types/node": "^13.11.0",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "lint-staged": "^10.1.2",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup/setupTests.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/test/setup",
      "<rootDir>/client"
    ]
  },
  "lint-staged": {
    "*.+(js|ts)": [
      "npm run lint:all"
    ],
    "**/**/*.+(js|ts)": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:all && lint-staged"
    }
  }
}
