{
  "name": "penpals",
  "private": true,
  "version": "1.0.0",
  "description": "penpals",
  "main": "index.js",
  "author": "Brandon Patterson",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "lint": "eslint . --ignore-path .gitignore",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\"",
    "format": "npm run prettier -- --write",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.17.1",
    "nodemon": "^2.0.2",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "all": "0.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.2.3",
    "jest": "^25.2.6",
    "lint-staged": "^10.1.1",
    "npm": "^6.14.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "run": "^1.4.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup/setupTests.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/test/setup"
    ]
  },
  "lint-staged": {
    "*.+(js)": [
      "eslint"
    ],
    "**/*.+(js)": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  }
}
