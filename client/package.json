{
  "name": "node-app-client",
  "private": true,
  "version": "1.0.0",
  "description": "node-app-client",
  "main": "index.js",
  "author": "Brandon Patterson",
  "scripts": {
    "del": "rimraf dist",
    "browser-sync": "browser-sync http://localhost:5000 --files 'dist' --no-notify --no-open",
    "gulp:dev": "gulp",
    "gulp:build": "gulp styles",
    "webpack:build": "webpack --mode production",
    "webpack:dev": "webpack --mode development --watch",
    "build": "npm run gulp:build && npm run webpack:build",
    "dev": "npm run del && npm run gulp:dev & npm run webpack:dev & npm run browser-sync",
    "lint": "eslint .",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "eslint": "^6.8.0",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-react": "^7.19.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "jest": "^25.2.7",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup/setupTests.js"
    ],
    "testEnvironment": "node",
    "rootDir": "./",
    "testPathIgnorePatterns": [
      "<rootDir>/test/setup"
    ]
  }
